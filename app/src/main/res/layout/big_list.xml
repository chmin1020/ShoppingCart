<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:weightSum="10"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tv_head"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/bigList_head"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7.5"
        android:weightSum="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/bigList_content"
            android:fontFamily="@font/font_goodharu"
            android:text="@string/example"
            android:textColor="@color/regularText"
            android:textSize="24sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/bigList_date"
            android:fontFamily="@font/font_goodharu"
            android:text="@string/date_form"
            android:textColor="#A7000000"
            android:textSize="16sp"
            android:gravity="center"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:src="@drawable/delete"
        android:gravity="center"
        android:padding="5dp"
        android:contentDescription="@string/descript_delete" />

</LinearLayout>